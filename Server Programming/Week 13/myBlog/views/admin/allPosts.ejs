<div class="admin-title">
  <h2>
    <%= locals.title %>
  </h2>
  <a href="/add" class="button">+ 새 게시물</a>
</div>

<ul class="admin-posts">

  <% data.forEach(post=> { %>

    <li>
      <div>
        <a href="/post/<%= post._id %>">
          <%= post.title %>
        </a>
        <p class="time-text">작성 시간: <%= new Date(post.createdAt).toLocaleString() %>
        </p>
      </div>
      <div class="admin-post-controls">
        <a href="#" class="btn">편집</a>

        <form action="#">
          <input type="submit" value="삭제" class="btn-delree btn">
        </form>

      </div>

    </li>

    <% }) %>
</ul>